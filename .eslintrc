{
	"root": false,
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint",
		"lit",
		"import"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:lit/recommended"
	],
	"env": {
		"browser": true,
		"node": true
	},
	"rules": {
		"eqeqeq": "error",
		"indent": [
			"error",
			4,
			{
				"ignoredNodes": [
					"ConditionalExpression",
					"TemplateLiteral *"
				],
                "SwitchCase": 1
			}
		],
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1
			}
		],
		"quotes": [
			"error",
			"single",
			{
				"allowTemplateLiterals": true,
                "avoidEscape": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"space-before-blocks": "error",
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"@typescript-eslint/no-inferrable-types": "off",
		"import/order": [
			"error",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index"
				],
				"alphabetize": {
					"order": "asc"
				}
			}
		]
	}
}