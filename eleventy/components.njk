---
title: Omni Components
layout: page.njk
pagination:
    data: components
    size: 1
    alias: component
permalink: "components/{{ component.name | slug }}/"
---

<article>
    <div class="component-meta">
        <div class="component-name">{{ component.name }}</div> 
        <div>{{ customElements | getDescription(component.name) | safe }}</div> 
        {# <div>{{ customElements | getTagName(component.name) }}</div>  #}
    </div>
    <div class="component-tab-container">
        <div class="component-tab-root">
            <div class="component-tab-wrapper">
                <div class="component-tab-list" role="tablist">
                    <button role="tab" class="component-tab-button active" onclick="openTab(event, 'docs')">Docs</button>
                    <button role="tab" class="component-tab-button" onclick="openTab(event, 'props')">Props</button>
                </div>
            </div>
            <div class="component-tab" id="docs" role="tabpanel" style="display: block;">
                <div class="component-tab-content">
                    <div>
                        {% for story in component.stories %}
                        <story-renderer 
                            id="story-{{ story | lower }}"
                            path="{{ component.path }}" 
                            tag="{{ customElements | getTagName(component.name) }}" 
                            key="{{ story }}"
                            {% if story === 'Interactive' %}interactive{% endif %} 
                        >
                        </story-renderer>
                        {%- endfor %}
                    </div>
                    <div class="component-toc-wrapper">
                        <div class="component-toc">
                            {% for story in component.stories %}
                                <a href="#story-{{ story | lower }}" id="story-{{ story | lower }}" class="component-toc-active">
                                    {{ story }}
                                </a>
                            {%- endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="component-tab" id="props" role="tabpanel">
                Props
            </div>
        </div>
    </div>


</article>

<script type="module" defer>
    import { enhanceCodeBlocks } from '/dist/utils/StoryUtils.js';
    enhanceCodeBlocks();
</script>
<script>

    function openTab(evt, tabId) {
        // Declare all variables
        var i, tabcontent, tablinks;

        // Get all elements with class="tabcontent" and hide them
        tabcontent = document.getElementsByClassName("component-tab");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }

        // Get all elements with class="tablinks" and remove the class "active"
        tablinks = document.getElementsByClassName("component-tab-button");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }

        // Show the current tab, and add an "active" class to the button that opened the tab
        document.getElementById(tabId).style.display = "block";
        evt.currentTarget.className += " active";
    }
    
</script>


