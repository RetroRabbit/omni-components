{% set currentUrl %}{{ page.url }}{% endset %}

<nav class="menu">
    <div class="menu-container">
        <div class="menu-item {% if currentUrl === '/' %}selected{% endif %}">
            <a class="menu-link {% if currentUrl === '/' %}selected{% endif %}" {% if currentUrl === '/' %}aria-current="page"{% endif %} href="/">Home</a>
        </div>

        {% for component in components %}
        <div class="menu-item {% if currentUrl.includes(component.name | slug) %}selected{% endif %}">
            <a class="menu-link {% if currentUrl.includes(component.name | slug) %}selected{% endif %}"
            {% if currentUrl.includes(component.name | slug) %}aria-current="page"{% endif %} 
            href="/components/{{ component.name | slug }}">
                {{ component.name }}
            </a>
        </div>
    {%- endfor %}
    </div>
</nav>