{
  "name": "@innofake/omni-components",
  "version": "0.0.1",
  "description": "Omni Components",
  "scripts": {
    "clean": "npx rimraf dist docs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run compile && npm run docs",
    "compile": "npm run clean && tsc",
    "postinstall": "(node -e \"if (! require('fs').existsSync('./dist')) {process.exit(1)} \" || (echo \"Dist does not exist. Attempting Typescript compile\" && tsc))",
    "docs": "npx rimraf docs && npm run docs:custom-elements && npm run docs:readme && npm run docs:storybook",
    "docs:custom-elements": "npx cem analyze --litelement --globs src/**",
    "docs:storybook": "npx build-storybook --output-dir=docs",
    "docs:readme": "npx web-component-analyzer ./src/**/*.{js,ts} --outFiles {dir}/README.md",
    "storybook": "npm run clean && tsc && npm run docs:custom-elements && concurrently -k -r \"tsc --build --watch --preserveWatchOutput\" \"npx start-storybook --no-manager-cache --port=6006\""
  },
  "files": [
    "dist",
    "!dist/**/*.stories.*",
    "!dist/**/*.tests.*",
    "!dist/**/*.test.*",

    "src/**/README.md",
    "src/**/*.ts",
    "src/**/*.js",

    "!src/**/*.stories.*",
    "!src/**/*.tests.*",
    "!src/**/*.test.*"
  ],
  "exports": {
    "./*": "./dist/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/innofake/omni-components.git"
  },
  "keywords": [],
  "author": "innofake",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/innofake/omni-components/issues"
  },
  "homepage": "https://github.com/innofake/omni-components#readme",
  "optionalDependencies": {
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@etchteam/storybook-addon-css-variables-theme": "^1.2.1",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-interactions": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-storysource": "^6.5.9",
    "@storybook/jest": "^0.0.10",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/theming": "^6.5.9",
    "@storybook/web-components": "^6.5.9",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "concurrently": "^7.2.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "web-component-analyzer": "^1.1.6"
  },
  "dependencies": {
    "lit": "^2.2.7"
  },
  "customElements": "custom-elements.json"
}
