{
  "name": "@capitec/omni-components",
  "version": "0.3.1",
  "type": "module",
  "description": "Omni Components come with minimal dependencies to reduce the bloat in your project. All web components base off <strong>OmniElement</strong> (Which itself is based off <a href=\"https://lit.dev\"><strong>LitElement</strong></a>) and are each available as fully standalone imports.",
  "scripts": {
    "clean": "npx rimraf dist docs",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts",
    "build": "npm run compile && npm run docs",
    "compile": "npm run clean && npm run compile:ts",
    "compile:ts": "tsc",
    "bundle": "npm run clean && npm run compile:esm",
    "compile:esm": "node scripts/build.mjs --bundle",
    "prepare": "(node -e \"if (! require('fs').existsSync('./dist')) {process.exit(1)} \" || (echo \"Dist does not exist. Attempting compile\" && npm run compile:ts))",
    "docs": "npx rimraf docs && npm run docs:custom-elements && npm run docs:readme && npm run docs:generate && npm run docs:theme-list && npm run docs:ssg",
    "docs:generate": "npm run docs:elements && readme generate -c \"readme/blueprint.json\" -i \"readme/blueprint.md\"",
    "docs:custom-elements": "npx cem analyze --litelement --globs src/**",
    "docs:ssg": "echo \"Run docs generation to 'docs' folder here\"",
    "docs:theme-list": "node scripts/themes-list.mjs",
    "docs:readme": "npx web-component-analyzer ./src/**/*.{js,ts} --outFiles {dir}/README.md",
    "docs:elements": "node scripts/elements-list.mjs",
    "serve": "npm run clean && tsc && eleventy --serve --config=.eleventy.cjs --port 6006",
    "test": "concurrently -k -r -s first \"npm run serve\" \"npm run test:only\"",
    "test:only": "npx wait-on tcp:6006 && cross-env PW_EXPERIMENTAL_TS_ESM=1 npx playwright test",
    "format": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "format:check": "prettier --config .prettierrc \"src/**/*.ts\" --check"
  },
  "files": [
    "dist",
    "!dist/**/*.stories.*",
    "!dist/**/*.tests.*",
    "!dist/**/*.test.*",
    "src/**/README.md",
    "src/**/*.ts",
    "src/**/*.js",
    "!src/**/*.stories.*",
    "!src/**/*.tests.*",
    "!src/**/*.test.*"
  ],
  "exports": {
    "./*": "./dist/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capitec/omni-components.git"
  },
  "keywords": [
    "web components",
    "custom elements",
    "components"
  ],
  "author": "capitec",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/capitec/omni-components/issues"
  },
  "homepage": "https://capitec.github.io/open-source/?repo=Omni-Components",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@appnest/readme": "^1.2.7",
    "@codemirror/lang-css": "^6.0.0",
    "@codemirror/lang-html": "^6.1.3",
    "@codemirror/lang-javascript": "^6.1.1",
    "@custom-elements-manifest/analyzer": "^0.6.4",
    "@ddietr/codemirror-themes": "^1.2.1",
    "@geut/esbuild-plugin-brode": "^2.0.14",
    "@playwright/test": "^1.27.1",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^27.5.2",
    "@types/pretty": "^2.0.1",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "chalk": "^5.0.1",
    "codemirror": "^6.0.1",
    "command-line-args": "^5.2.1",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "deasync": "^0.1.28",
    "esbuild": "^0.15.12",
    "esbuild-plugin-d-ts-path-alias": "^2.0.0",
    "esbuild-plugins-node-modules-polyfill": "^1.0.6",
    "eslint": "^8.22.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-lit": "^1.6.1",
    "expect": "^29.2.2",
    "fs-extra": "^10.1.0",
    "global": "^4.4.0",
    "globby": "^13.1.2",
    "jest": "^29.2.2",
    "jsdom": "^20.0.2",
    "package-json": "^8.1.0",
    "prettier": "^2.7.1",
    "pretty": "^2.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "wait-on": "^6.0.1",
    "web-component-analyzer": "^1.1.6",
    "xhr2": "^0.2.1"
  },
  "dependencies": {
    "lit": "^2.3.1"
  },
  "resolutions": {
    "esbuild": "^0.15.12"
  },
  "overrides": {
    "esbuild": "^0.15.12"
  },
  "customElements": "custom-elements.json"
}
